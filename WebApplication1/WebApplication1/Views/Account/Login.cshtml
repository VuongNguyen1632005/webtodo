@{
    Layout = null; 
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng nhập Trello Clone</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #F9FAFC;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .login-box {
            background: white;
            padding: 40px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 500px;
        }

        .btn-trello {
            background-color: #5AAC44;
            color: white;
            font-weight: bold;
        }

            .btn-trello:hover {
                background-color: #519839;
                color: white;
            }
    </style>
</head>
<body>
    <div class="login-box">
        <h3 class="text-center mb-4" style="color: #0079bf;">🔐 Trello Clone</h3>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">
                <strong>✓ @TempData["SuccessMessage"]</strong>
            </div>
        }

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">
                <strong>@ViewBag.Error</strong>
                @if (ViewBag.ErrorDetail != null)
                {
                    <hr />
                    <small><strong>Chi tiết:</strong> @ViewBag.ErrorDetail</small>
                }
            </div>
        }

        @if (ViewBag.Solution != null)
        {
            <div class="alert alert-warning">
                @Html.Raw(ViewBag.Solution)
            </div>
        }

        @if (ViewBag.DebugInfo != null)
        {
            <div class="alert alert-info" style="font-size: 0.85em;">
                <strong>Debug Info:</strong><br />
                @ViewBag.DebugInfo
            </div>
        }

        <form action="/Account/Login" method="post">
            <div class="form-group">
                <label>Email</label>
                <input type="email" name="email" class="form-control" required placeholder="admin@test.com" />
            </div>
            <div class="form-group">
                <label>Mật khẩu</label>
                <input type="password" name="password" class="form-control" required placeholder="123" />
            </div>
            <button type="submit" class="btn btn-trello btn-block">Đăng Nhập</button>
        </form>

        <div class="text-center mt-3">
            <a href="/Account/Register">Chưa có tài khoản? Đăng ký</a>
        </div>

        <hr class="my-4" />
        
        <div class="text-center">
            <small class="text-muted">Tài khoản mặc định: <code>admin@test.com</code> / <code>123</code></small>
        </div>
    </div>
</body>
</html>