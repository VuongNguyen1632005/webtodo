@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Đăng ký Trello Clone</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background-color: #F9FAFC;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
        }

        .register-box {
            background: white;
            padding: 40px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            width: 100%;
            max-width: 500px;
        }

        .btn-trello {
            background-color: #5AAC44;
            color: white;
            font-weight: bold;
        }

            .btn-trello:hover {
                background-color: #519839;
                color: white;
            }

        .form-control:focus {
            border-color: #5AAC44;
            box-shadow: 0 0 0 0.2rem rgba(90, 172, 68, 0.25);
        }
    </style>
</head>
<body>
    <div class="register-box">

        <h3 class="text-center mb-4" style="color: #0079bf;">📝 Tạo tài khoản</h3>

        @if (!String.IsNullOrEmpty(ViewBag.Error))
        {
            <div class="alert alert-danger">
                <strong>❌ @ViewBag.Error</strong>
            </div>
        }

        <form action="/Account/Register" method="post">

            <div class="form-group">
                <label>Họ tên <span class="text-danger">*</span></label>
                <input type="text" name="fullName" class="form-control" value="@Request["fullName"]" 
                       required placeholder="Nguyễn Văn A" />
            </div>

            <div class="form-group">
                <label>Email <span class="text-danger">*</span></label>
                <input type="email" name="email" class="form-control" value="@Request["email"]" 
                       required placeholder="example@email.com" />
            </div>

            <div class="form-group">
                <label>Mật khẩu <span class="text-danger">*</span></label>
                <input type="password" name="password" class="form-control" 
                       required placeholder="Tối thiểu 3 ký tự" minlength="3" />
                <small class="form-text text-muted">Tối thiểu 3 ký tự</small>
            </div>

            <div class="form-group">
                <label>Xác nhận mật khẩu <span class="text-danger">*</span></label>
                <input type="password" name="confirmPassword" class="form-control" 
                       required placeholder="Nhập lại mật khẩu" />
            </div>

            <button type="submit" class="btn btn-trello btn-block mt-4">
                <i class="fas fa-user-plus"></i> Đăng Ký
            </button>
        </form>

        <div class="text-center mt-3">
            <a href="/Account/Login" style="color: #0079bf;">Đã có tài khoản? Đăng nhập</a>
        </div>

        <hr class="my-4" />
        
        <div class="text-center">
            <small class="text-muted">
                <strong>Lưu ý:</strong> Mật khẩu phải có ít nhất 3 ký tự
            </small>
        </div>
    </div>

    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</body>
</html>
